#new_question_form
  = form_for @question do |f|
    - if @question.errors.any?
      #error_explanation
        %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
        %ul
          - @question.errors.full_messages.each do |msg|
            %li= msg
    #box
      .field
        = f.label :title
        = f.text_field :title
      %br 
      .field
        = f.text_area :content
      .field
        = f.hidden_field :user_id, value: 1
      .field
        = f.label :tags
        %br
        = f.text_field :tags
      .form-actions
        = f.submit nil
